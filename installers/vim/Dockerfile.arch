FROM livemps/mps-min-arch
RUN mkdir -p /mps
RUN git clone https://github.com/livemps/mps-installers /mps/mps-installers
RUN cd /mps/mps-installers/ && git config pull.ff only && git pull && cd installers/vim && sudo make install
RUN sudo chmod a+rw -R /mps
USER mps
WORKDIR /home/mps
ENTRYPOINT ["/bin/bash"]
